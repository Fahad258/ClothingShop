
@model clothingshopproject.Models.Clothingshop

<form method="post" asp-action="Deletepost">
    <input asp-for="Id" hidden />
    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Product</h2>

        </div>
        <div class="row">
            <div class="col-8">

                <div class="from-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disabled class="form-control" />
                        
                    </div>
                </div>
                <br />


                <div class="from-group row">
                    <div class="col-4">
                        <label asp-for="Size"></label>

                    </div>
                    <div class="col-8">
                        <input asp-for="Size" disabled class="form-control" />
                        
                    </div>
                </div>
                <br />

                <div class="from-group row">
                    <div class="col-4">
                        <label asp-for="ProductCode"></label>

                    </div>
                    <div class="col-8">
                        <input asp-for="ProductCode" disabled class="form-control" />
                    </div>
                </div>
                <br />


                <div class="from-group row">
                    <div class="col-4">
                        <label asp-for="price"></label>

                    </div>
                    <div class="col-8">
                        <input asp-for="price" disabled class="form-control" />
                        
                    </div>
                </div>
                <br />
                <br />


                <div class="from-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-danger  w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                        <div class="col">

                        </div>


                    </div>
                </div>
            </div>
            <div class="col-4">
                @*keep this empty*@
            </div>
        </div>



    </div>
</form>
@section scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
