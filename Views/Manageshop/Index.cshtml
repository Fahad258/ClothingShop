@model IEnumerable<clothingshopproject.Models.Clothingshop>

<div class="container p-3">
    <div class="row pt-4">

        <div class="col-6">
            <h2 class="text-primary">Products Details</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Manageshop" asp-action="Create" class="btn btn-primary">
                <i class="far fa-plus-square"></i> &nbsp; Add New Product
            </a>
        </div>

    </div>
    <br /><br />

    @if(Model.Count()>0)
            {
                <table class="table table-bordered table-dark table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                <a class="nav-link text-primary">Name</a>
                                
                            </th>
                            <th>
                                <a class="nav-link text-primary">Size</a>
                                
                            </th>
                            <th>
                                <a class="nav-link text-primary">Product code</a>
                                
                            </th>
                            <th>
                                <a class="nav-link text-primary">price</a>
                              
                            </th>
                            <th>
                               <a class="nav-link text-primary">Actions</a>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var obj in Model)
                {
                        <tr>
                            <td width="20%">@obj.Name </td>
                            <td width="20%">@obj.Size </td>
                            <td width="20%">@obj.ProductCode </td>
                            <td width="20%">@obj.price </td>
                            <td class="text-center">
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Manageshop" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                        <i class="fas fa-edit"></i> &nbsp; Edit
                                    </a>
                                    <a asp-controller="Manageshop" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                        <i class="fas fa-trash-alt"></i>&nbsp; Delete
                                    </a>
                                </div>

                            </td>
                        </tr>
                }
                    </tbody>


                </table>
    }
    else
    {
        <p>No Product Exists.</p>
    }

</div>

